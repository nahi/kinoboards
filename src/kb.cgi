#	書き込む記事データはキャッシュされているもの．
#
# - RETURN
#	なし
#
sub UpdateArticleDb
{
    local( $Board ) = @_;

    local( $File, $TmpFile, $dId );

    $File = &GetPath($Board, $DB_FILE_NAME);
    $TmpFile = &GetPath( $Board, "$DB_FILE_NAME.$TMPFILE_SUFFIX$$" );
