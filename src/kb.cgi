sub DoKill
{
    local( $sig ) = @_;
    if ( !$PC )
    {
	&cgi'unlock( $LOCK_FILE );
	&cgi'unlock( $LOCK_FILE_B ) if $LOCK_FILE_B;
    }
    &KbLog( $kinologue'SEV_WARN, "Caught a SIG$sig - shutting down..." );
    exit( 1 );
}


